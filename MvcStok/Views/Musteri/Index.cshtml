@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                @*Satır açıldı*@
                <th>@ktgr.MUSTERIID</th>  @*Tablo verisi*@  @*td değilde th olursa verilerde kalın gelir*@
                <td>@ktgr.MUSTERIAD</td>
                <td>@ktgr.MUSTERISOYAD</td>
               

            </tr>
        }
    </tbody>
</table>