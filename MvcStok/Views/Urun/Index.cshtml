@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                @*Satır açıldı*@
                <th>@ktgr.URUNID</th>  @*Tablo verisi*@  @*td değilde th olursa verilerde kalın gelir*@
                <td>@ktgr.URUNAD</td>
                <td>@ktgr.MARKA</td>
                <td>@ktgr.URUNKATEGORI</td>
                <td>@ktgr.FIYAT</td>
                <td>@ktgr.STOK</td>
                <td><a href="/URUN/SIL/@ktgr.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/URUN/GUNCELLE/@ktgr.URUNID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/URUN/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
