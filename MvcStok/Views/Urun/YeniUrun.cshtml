
@model MvcStok.Models.Entity.TBLURUNLER

@{   ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>

        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30" />
    </div>
    <div>

        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="MARKA" required="" placeholder="Buraya Markayı Yazınız" />
    </div>
    <div>

        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.TBLKATEGORI.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>

        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div>

        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {

            alert('Ürün Ekleme İşlemi Yapıldı!');
        });

    </script>
</form>

